<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpsEditor">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">


        <Button
            android:id="@+id/tutorialBtn"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click here for setup tutorial"
            android:textColor="@color/bootStrapPrimary"
            android:textSize="15sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="start"
            android:orientation="vertical"
            tools:ignore="UselessLeaf">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Connection type"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Off = SSH, On = APCUPSD TCP PORT"
                android:textSize="12sp" />

            <Switch
                android:id="@+id/connectionTypeSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:nextFocusForward="@+id/privateKeyPassphraseET"
                android:singleLine="true"
                tools:ignore="UseSwitchCompatOrMaterialXml" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Server address"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/serverAddressET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Server ip or domain address"
                android:nextFocusForward="@+id/serverPortET"
                android:singleLine="true" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Server port"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="SSH default port is 22. APCUPSD default tcp port is 3551"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/serverPortET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Port to use for connection"
                android:nextFocusForward="@+id/serverUsernameET"
                android:singleLine="true" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Server username (SSH)"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/serverUsernameET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="SSH Server username"
                android:nextFocusForward="@+id/serverPasswordET"
                android:singleLine="true" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Server password (SSH)"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/serverPasswordET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="SSH Server password"
                android:inputType="textPassword"
                android:nextFocusForward="@+id/privateKeyAuthSwitch"
                android:singleLine="true" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Private key authentication (SSH)"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="If enabled, ssh connection uses private key instead of password. This is far more secure option"
                android:textSize="12sp" />

            <Switch
                android:id="@+id/privateKeyAuthSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:nextFocusForward="@+id/privateKeyPassphraseET"
                android:singleLine="true" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Private key passphrase (SSH)"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="If key has password, otherwise leave blank"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/privateKeyPassphraseET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Give your private key passphrase"
                android:inputType="textPassword"
                android:nextFocusForward="@+id/privateKeyLocationET"
                android:singleLine="true" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Private key location (SSH)"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/privateKeyLocationET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:hint="Path to your private key stored on your phones memory"
                    android:nextFocusForward="@+id/strictHostKeyCheckingSwitch"
                    android:singleLine="true" />

                <Button
                    android:id="@+id/selectPrivateKeyLocationBtn"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select file"
                    android:textColor="@color/bootStrapPrimary"
                    android:textSize="15sp" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Strict host key checking (SSH)"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Asks user to verify connection host at first time before connecting. For security, keep enabled"
                android:textSize="12sp" />

            <Switch
                android:id="@+id/strictHostKeyCheckingSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:checked="true"
                android:nextFocusForward="@+id/statusCommandET"
                android:singleLine="true" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Status command (SSH)"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/statusCommandET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nextFocusForward="@+id/eventsLocationET"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Load events"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="If switched off then events wont be loaded and also its view wont be visible"
                android:textSize="12sp" />

            <Switch
                android:id="@+id/loadUpsEventsSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:nextFocusForward="@+id/eventsLocationET"
                android:singleLine="true"
                android:checked="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Events location (SSH)"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/eventsLocationET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nextFocusForward="@+id/positiveBtn"
                android:singleLine="true" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Open automatically"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Open detailed info view automatically for this UPS after status update. Toggle on will override earlier UPS selection."
                android:textSize="12sp" />

            <Switch
                android:id="@+id/autoOpenUpsSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:nextFocusForward="@+id/privateKeyPassphraseET"
                android:singleLine="true" />


        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/negativeBtn"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancel"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/positiveBtn"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Save"
                    android:textColor="@color/bootStrapPrimary"
                    android:textSize="15sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</ScrollView>